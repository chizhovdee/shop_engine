$('#<%= dom_id(@resource) %>').fadeOut();


$('#<%= dom_id(@resource) %>').queue(function(next){ 
  $(this).find('.state').html("<%= escape_javascript(admin_state(@resource)) %>"); 
  
  next();
}).fadeIn();

$('#<%= dom_id(@resource, :attributes_table) %> .state td').html("<%= escape_javascript(admin_state(@resource)) %>"); 
