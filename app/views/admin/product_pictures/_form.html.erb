<%= semantic_form_for [:admin, @product_picture.product, @product_picture] do |f| %>
  <%= f.inputs do %>

    <%= f.hidden_field :product_id %>

    <h2 class="custom">Product: <%= f.object.product.name %></h2>

    <p style="padding: 10px">
      <%= image_tag(@product_picture.picture_url(:middle)) if @product_picture.picture? %>
    </p>  

    <p style="padding: 10px">
      <%= f.input :picture %>
      <%= f.hidden_field :picture_cache %>
    </p>  

    <% if @product_picture.picture? %>
      <p style="padding: 10px">
        <label>
          <%= f.check_box :remove_picture %>
          Remove picture
        </label>
      </p>
    <% end %>  

    <%= f.input :main %>
  <% end %>  

  <%= f.actions  %>
<% end %>