<div id="show_category">
  <h1 class="clearfix"><%= title(@category.name) %></h1>

  <div class="divide clearfix"></div>

  <br />

  <div class="text">
    <%= @category.description.html_safe %>
  </div>

  <% if @child_categories.any? %>
    <div class="child_categories">
      <% @child_categories.each do |category| %>
        <div class="child_category">
          <%= link_to("#{category.name} (#{category.items_count.to_i})", "/categories/#{category.alias}") %>
        </div>
      <% end %>
    </div>
  <% end %>


  <% if @items.any? %>
    <%= render("items/list", :items => @items, :item_pictures => @item_pictures, :with_paginate => true) %>
  <% end %>
</div>